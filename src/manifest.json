{

    "manifest_version": 2,
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "1.1",
    "versionString": "1.1",
    "homepage_url": "https://www.letztechance.org/lc2firefoxaddon",
    "update-url": "https://www.letztechance.org/lc2firefoxaddon",
    "default_locale": "de",
    "applications": {
        "gecko": {
            "strict_min_version": "60.0a1"
        }
    },
    "icons": {
        "16": "icons/page-16.png",
        "32": "icons/page-32.png",
        "48": "icons/page-48.png"
    },
    "protocol_handlers": [{
        "protocol": "irc",
        "name": "IRC Mibbit Extension",
        "uriTemplate": "https://www.letztechance.org/openlink?https://mibbit.com/?url=%s"
    }],
    "content_scripts": [{
            "matches": ["<all_urls>"],
            "js": ["content_scripts/export.js"]
        },
        {
            "matches": ["<all_urls>"],
            "js": ["content-script.js"]
        }
    ],

    "background": {
        "scripts": ["background.js", "bookmark.js", "command.js", "export.js", "filter.js", "notify.js", "message.js", "permissions.js", "rootcert.js", "useragent.js"]
    },

    "permissions": [
        "notifications",
        "bookmarks",
        "tabs",
        "menus",
        "activeTab",
        "webRequest", "webRequestBlocking", "https://www.letztechance.org/*"
    ],



    "commands": {
        "toggle-feature": {
            "suggested_key": { "default": "Ctrl+Shift+U" },
            "description": "Send a 'toggle-feature' event to the extension"
        }
    },

    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },


    "sidebar_action": {
        "default_icon": "icons/page-32.png",
        "default_title": "LetzteChance.Org - Menu",
        "default_panel": "sidebar/sidebar.html"
    },

    "browser_action": {
        "default_icon": "icons/page-32.png",
        "default_title": "Choose a user agent",
        "default_popup": "popup/choose_ua.html"
    }

}